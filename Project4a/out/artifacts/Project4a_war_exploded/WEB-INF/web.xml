<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">


    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ItemViewServlet</servlet-name>
        <servlet-class>servlet.ItemViewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ItemAdderServlet</servlet-name>
        <servlet-class>servlet.ItemAdderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ItemDeleterServlet</servlet-name>
        <servlet-class>servlet.ItemDeleterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ItemImageServlet</servlet-name>
        <servlet-class>servlet.ItemImageServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/userlogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/userregister</url-pattern>
        </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ItemAdderServlet</servlet-name>
        <url-pattern>/additem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ItemDeleterServlet</servlet-name>
        <url-pattern>/delitem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ItemImageServlet</servlet-name>
        <url-pattern>/addimage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ItemViewServlet</servlet-name>
        <url-pattern>/viewitem</url-pattern>
    </servlet-mapping>

</web-app>
